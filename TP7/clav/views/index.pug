extends layout

block content
  .w3-container.w3-teal
    h1 Classes da Lista Consolidada
  .w3-container
    h3
      b Número de classes (nível 1): 
      = q
    table.w3-text-black.w3-table.w3-bordered.w3-striped.w3-centered.w3-margin-bottom
      tr 
        th Título
        th Código
      each c in cs 
        tr
          td= c.titulo
          td
            a(href="http://localhost:4000/classes/" + c.codigo)= c.codigo
